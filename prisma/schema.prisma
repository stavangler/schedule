generator client {
    provider = "prisma-client-js"
    //previewFeatures = ["nativeTypes"]
}

datasource db {
    provider = "postgresql"
    url      = env("DB_URL")
}

model entries {
    id               Int                @id @default(autoincrement())
    date             DateTime
    title            String
    description      String
    room             String
    starttime        DateTime
    endtime          DateTime
    trip_id          Int?
    trip             trips?             @relation(fields: [trip_id], references: [id])
    speakers_entries speakers_entries[]
    tags_entries     tags_entries[]
}

model speakers {
    id               Int                @id @default(autoincrement())
    name             String
    href             String
    speakers_entries speakers_entries[]
}

model tags {
    id           Int            @id @default(autoincrement())
    title        String
    tags_entries tags_entries[]
}

model trips {
    id          Int       @id @default(autoincrement())
    title       String
    description String
    date        DateTime
    entries     entries[]
}

model speakers_entries {
    id         Int       @id @default(autoincrement())
    speaker_id Int?
    entry_id   Int?
    entry      entries?  @relation(fields: [entry_id], references: [id])
    speaker    speakers? @relation(fields: [speaker_id], references: [id])
}

model tags_entries {
    id       Int      @id @default(autoincrement())
    tag_id   Int?
    entry_id Int?
    entry    entries? @relation(fields: [entry_id], references: [id])
    tag      tags?    @relation(fields: [tag_id], references: [id])
}
